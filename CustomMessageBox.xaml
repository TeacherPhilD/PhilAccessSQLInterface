        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="189" Width="400" Icon="/images/icons/sqlicon.png">
    <Grid>
        <TextBlock x:Name="messageTextBlock" Text="Message" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="153,10,0,0" Height="102" Width="219"/>
        <Button Content="OK" Width="76" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,117,0,0" Click="OkButton_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="26,12,0,0" VerticalAlignment="Top" Width="100" Source="/images/icons/sqlicon.png" RenderTransformOrigin="0.52,0.513"/>
    </Grid>
</Window>
